<% function formatNumber(num) { return num >= 1000 ? (num / 1000).toFixed(1) + 'k' : num; } %>
<% const limitedItems = items.slice(0, 5); %>

<h2>一、本期项目总览</h2>

<ol>
  <% limitedItems.forEach(function (item, index) { %>
  <li>
    <strong><%= item.name %></strong>
    —— <%= item.title %>
  </li>
  <% }); %>
</ol>

<h2>二、项目详情</h2>

<% limitedItems.forEach(function (item, index) { %>
<h3><%= index + 1 %>. <%= item.name %></h3>

<p><%= item.title %></p>

<p><%= item.description %></p>

<ul>
  <li><strong>作者：</strong><%= item.author %></li>
  <% if (item.language) { %>
  <li><strong>语言：</strong><%= item.language %></li>
  <% } %>
  <li>
    <strong>Star：</strong>
    <%= formatNumber(item.totalStars) %>
    <% if (item.lastWeekStars > 0) { %>
    （本周 +<%= formatNumber(item.lastWeekStars) %>）
    <% } %>
  </li>
</ul>

<p>
  <strong>GitHub：</strong>
  <a href="<%= item.url %>" target="_blank" rel="noopener noreferrer">
    <%= item.url %>
  </a>
</p>

<% if (item.relatedUrls && item.relatedUrls.length > 0) { %>
<p><strong>相关链接：</strong></p>
<ul>
  <% item.relatedUrls.forEach(function (link) { %>
  <li>
    <strong><%= link.title %>：</strong>
    <a href="<%= link.url %>" target="_blank" rel="noopener noreferrer">
      <%= link.url %>
    </a>
  </li>
  <% }); %>
</ul>
<% } %>

<% if (item.imageUrl) { %>
<p>
  <img
    src="<%= item.imageUrl %>"
    alt="项目预览图"
    style="max-width: 100%; border-radius: 4px;"
  />
</p>
<% } %>

<hr />
<% }); %>

<p>
  数据来源：HelloGitHub · 排版与整理：TrendPublish
</p>
